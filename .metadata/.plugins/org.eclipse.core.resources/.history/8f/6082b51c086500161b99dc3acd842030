    index_ret = ua_string+'_ret'
    data_set[ua][index_ret] = (data_set[ua]['return']/100+1).cumprod()
    data_set[ua].loc[:,['cumsum_5_10', index_ret]].plot()
    plt.show()
    
    
    
    
    
    
    
    